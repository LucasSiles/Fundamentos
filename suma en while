
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
	int N, acumulador=0, x;

	cout<<"Ingrese el numero N: "<<endl; 
	cin>>N;

	while(N>0)
	{
		x=N%10;
		N=N/10;
		acumulador=acumulador+x;
	}
	cout<<"La suma de los digitos: "<<acumulador;

	getch();
}

